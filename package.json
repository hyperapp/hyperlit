{
    "name": "hyperlit",
    "version": "0.1.1",
    "description": "JSX-like ttl for hyperapp",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "files": [
        "src",
        "dist"
    ],
    "scripts": {
        "build:iife": "rollup src/index.js --no-strict -f iife -n html -g hyperapp:hyperapp --external hyperapp | terser -m -c  > dist/hyperlit.js",
        "build:esm": "rollup src/index.js --no-strict -f es --external hyperapp | terser -m -c --toplevel > dist/index.js",
        "build": "npm run build:esm && npm run build:iife",
        "test": "ava"
    },
    "author": "Zacharias Enochsson",
    "license": "MIT",
    "devDependencies": {
        "ava": "^3.8.2",
        "esm": "^3.2.25",
        "hyperapp": "2.0.4",
        "rollup": "^2.10.2",
        "terser": "^4.6.13"
    },
    "peerDependencies": {
        "hyperapp": "^2.0.4"
    },
    "ava": {
        "require": [
            "esm"
        ]
    },
    "bugs": {
        "url": "https://github.com/zaceno/hyperlit/issues"
    },
    "homepage": "https://github.com/zaceno/hyperlit#readme"
}
